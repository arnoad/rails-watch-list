
<div class="m-5">
  <h1><%= @list.name %></h1>
</div>
<div class="ms-5">
  <h3>Bookmarks</h3>
      <% @list.bookmarks.each do |bookmark| %>
      <p><%= bookmark.comment%><%= bookmark.movie.title %> <%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: 'delete', turbo_comfirm: 'Are you sure?'}, class: "btn-danger" %></p>
    <% end %>
</div>

<div class="m-5">
  <%= link_to "Back", lists_path, class: "btn btn-secondary"%>
  <%= link_to "+ Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
